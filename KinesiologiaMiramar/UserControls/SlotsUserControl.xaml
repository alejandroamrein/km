                        BorderThickness="0" Command="{Binding Paste4Command}"
                        Background="Transparent" Visibility="{Binding Paste4Visibility}">
                    <Image Source="/KinesiologiaMiramar;component/Images/paste.png" 
                           Height="16" Width="16" />
