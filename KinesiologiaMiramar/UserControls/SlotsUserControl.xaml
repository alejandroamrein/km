                <Button HorizontalAlignment="Left" VerticalAlignment="Stretch" Margin="30,5,0,20" 
                        BorderThickness="0" Command="{Binding Copy4Command}"
                        Background="Transparent" Visibility="{Binding Delete4Visibility}">
